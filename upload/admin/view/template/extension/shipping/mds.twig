{{header}}{{column_left}}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right"> <button type="submit" form="form-mds" data-toggle="tooltip" title="{{button_save}}" class="btn btn-primary"> <i class="fa fa-save"></i> </button> <a href="{{cancel}}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"> <i class="fa fa-reply"></i> </a> </div>
            <h1>{{heading_title}}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li> <a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a> </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"> <i class="fa fa-exclamation-circle"></i>{{error_warning}}<button type="button" class="close" data-dismiss="alert">&times; </button> </div>
        {% endif %}{% if mdsErrors %}{% for mdsError in mdsErrors %}
            <div class="alert alert-danger"> <i class="fa fa-exclamation-circle"></i>{{mdsError.text}}<button type="button" class="close" data-dismiss="alert">&times; </button> </div>
        {% endfor %}{% endif %}


        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> <i class="fa fa-pencil"></i>{{text_edit}}</h3>
            </div>
            <div class="panel-body">

                <form action="" method="post" enctype="multipart/form-data" id="form-mds" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{entry_status}}</label>
                        <div class="col-sm-10">
                            <select name="shipping_mds_status" id="input-status" class="form-control">
                                <option {{ shipping_mds_status == "0" ? 'selected' : ''}} value="0">{{  text_disabled }}</option>
                                <option {{ shipping_mds_status == "1" ? 'selected' : ''}} value="1">{{ text_enabled }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-geo-zone">{{text_geo_zone}}</label>
                        <div class="col-sm-10">
                            <select name="shipping_mds_geo_zone_id" id="input-geo-zone" class="form-control">
                                <option value="0">{{text_all_zones}}</option>
                                {% for geo_zone in geo_zones %}{% if geo_zone.geo_zone_id==shipping_mds_geo_zone_id %}
                                    <option value="{{geo_zone.geo_zone_id}}" selected="selected">{{geo_zone.name}}</option>
                                {% else %}
                                    <option value="{{geo_zone.geo_zone_id}}">{{geo_zone.name}}</option>
                                {% endif %}{% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-username"> <span data-toggle="tooltip" title="{{help_username}}">{{entry_username}}</span> </label>
                        <div class="col-sm-10">
                            <input type="text" name="shipping_mds_username" value="{{shipping_mds_username}}" placeholder="{{shipping_mds_username}}" id="input-username" class="form-control"/>{% if error_username %}
                            <div class="text-danger">{{error_username}}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-password"> <span data-toggle="tooltip" title="{{help_password}}">{{entry_password}}</span> </label>
                        <div class="col-sm-10">
                            <input type="password" name="shipping_mds_password" value="{{shipping_mds_password}}" placeholder="{{shipping_mds_password}}" id="input-password" class="form-control"/>{% if error_password %}
                            <div class="text-danger">{{error_password}}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-demo"> <span data-toggle="tooltip">{{ entry_demo }}</span> </label>
                        <div class="col-sm-10">
                            <select class="form-control" name="shipping_mds_is_demo" id="input-demo">
                                <option {{ shipping_mds_is_demo == "0" ? 'selected' : ''}} value="0">{{ entry_no }}</option>
                                <option {{ shipping_mds_is_demo == "1" ? 'selected' : ''}} value="1">{{ entry_yes }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-demo"> <span data-toggle="tooltip">{{ entry_auto_create_waybill }}</span> </label>
                        <div class="col-sm-10">
                            <select class="form-control" name="shipping_mds_auto_create_waybill" id="input-demo">
                                <option {{ shipping_mds_is_auto_create_waybill == "0" ? 'selected' : ''}} value="0">{{ entry_no }}</option>
                                <option {{ shipping_mds_is_auto_create_waybill == "1" ? 'selected' : ''}} value="1">{{ entry_yes }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-demo"> <span data-toggle="tooltip">{{ entry_auto_accept_waybill }}</span> </label>
                        <div class="col-sm-10">
                            <select class="form-control" name="shipping_mds_auto_accept_waybill" id="input-demo">
                                <option {{ shipping_mds_is_auto_accept_waybill == "0" ? 'selected' : ''}} value="0">{{ entry_no }}</option>
                                <option {{ shipping_mds_is_auto_accept_waybill == "1" ? 'selected' : ''}} value="1">{{ entry_yes }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-demo"> <span data-toggle="tooltip">{{ entry_auto_create_address }}</span> </label>
                        <div class="col-sm-10">
                            <select class="form-control" name="shipping_mds_auto_create_address" id="input-demo">
                                <option {{ shipping_mds_is_auto_create_address == "0" ? 'selected' : ''}} value="0">{{ entry_no }}</option>
                                <option {{ shipping_mds_is_auto_create_address == "1" ? 'selected' : ''}} value="1">{{ entry_yes }}</option>
                            </select>
                        </div>
                    </div>
                    <br>
                    {% for key, service in services %}
                        {% set display, surcharge=_context['shipping_mds_service_display_name_' ~ key], _context['shipping_mds_service_surcharge_' ~ key] %}
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-service_display_name_{{key}}"> <span data-toggle="tooltip" title="This is what shoppers will see during checkout.">Checkout display text for <br>"{{service}}"</span> </label>
                            <div class="col-sm-10"> <input required aria-required="true" title="Enter display name e.g{{display}}" type="text" name="shipping_mds_service_display_name_{{key}}" value="{{display}}" placeholder="" id="input-service_display_name_{{key}}" class="form-control"/> </div>
                        </div>
                        <div class="form-group ">
                            <label class="col-sm-2 control-label" for="mds_service_surcharge_{{key}}"> <span data-toggle="tooltip" title="{{help_markup}}">{{service}} markup fee </span> </label>
                            <div class="col-sm-10">
                                <input min="0" max="100" type="number" name="shipping_mds_service_surcharge_{{key}}" value="{{surcharge}}" placeholder="" id="mds_service_surcharge_{{key}}" class="form-control"/>{% if error_markup %}
                                <div class="text-danger">{{error_markup}}</div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                    <hr />
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            <span data-toggle="tooltip" title="MDS risk cover">Risk Cover </span>
                        </label>
                        <div class="col-sm-10">
                            <label class="col-sm- control-label" for="input-cover">
                                {% set checked = shipping_mds_cover is same as(1) ? 1 : 0 %}

                                {{text_yes}}
                                <input type="radio" name="shipping_mds_cover" {{ checked }} value="1"/>
                            </label>
                            <label class="col-sm-3 control-label" for="input-cover">
                                {{ text_no }}
                                <input type="radio" name="shipping_mds_cover" {{ not checked }} value="0"/>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            <span data-toggle="tooltip" title="MDS Rica">Rica </span>
                        </label>
                        <div class="col-sm-10">
                            <label class="col-sm- control-label" for="input-rica">
                                {% set checked = shipping_mds_rica is same as(1) ? 1 : 0 %}

                                {{text_yes}}
                                <input type="radio" name="shipping_mds_rica" {{ checked }} value="1"/>
                            </label>
                            <label class="col-sm-3 control-label" for="input-rica">
                                {{ text_no }}
                                <input type="radio" name="shipping_mds_rica" {{ not checked }} value="0"/>
                            </label>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-demo"> <span data-toggle="tooltip">{{ entry_default_collection_address }}</span> </label>
                        <div class="col-sm-10">
                            <select class="form-control" name="default_address_id" id="input-demo">
                                {% for address_id, address in default_collivery_from_addresses %}
                                    <option {{ address_id == default_address_id ? 'selected' : ''}} value="{{ address_id }}">{{ address.nice_address }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{footer}}
